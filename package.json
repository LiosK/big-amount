{
  "name": "big-amount",
  "version": "0.1.0-alpha",
  "description": "TypeScript BigInt-based rational number library focused on accounting",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf doc lib",
    "doc": "typedoc src/index.ts --out doc --gitRevision \"v$npm_package_version\"",
    "lint": "eslint src test",
    "prepare": "npm run lint && npm run clean && npm run build && npm test && npm run doc",
    "test": "mocha -p -t 8000 -r test/run_on_node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiosK/big-amount.git"
  },
  "keywords": [
    "typescript",
    "bigint",
    "rational",
    "fraction",
    "numeric",
    "accounting"
  ],
  "author": "LiosK <contact@mail.liosk.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/LiosK/big-amount/issues"
  },
  "homepage": "https://github.com/LiosK/big-amount#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chai": "^4.3.0",
    "eslint": "^7.20.0",
    "mocha": "^8.3.0",
    "typedoc": "^0.20.26",
    "typescript": "^4.1.5"
  }
}
