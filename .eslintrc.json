{
  "root": true,
  "extends": ["eslint:recommended"],
  "overrides": [
    {
      "files": ["src/*.ts"],
      "extends": ["plugin:@typescript-eslint/recommended"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"]
    },
    {
      "files": ["test/*.js", "test/*/*.js"],
      "env": {
        "es2021": true,
        "mocha": true,
        "node": true
      },
      "globals": {
        "chai": "readonly"
      },
      "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
      }
    }
  ]
}
